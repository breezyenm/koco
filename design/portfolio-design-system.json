    "colors": {
      "palette": {
        "white": "#FFFFFF",
        "black": "#0B0B0B",
        "gray_25": "#FCFCFD",
        "gray_50": "#F7F7F7",
        "gray_100": "#F3F4F6",
        "gray_200": "#E5E7EB",
        "gray_300": "#D1D5DB",
        "gray_400": "#9CA3AF",
        "gray_500": "#6B7280",
        "gray_600": "#4B5563",
        "gray_700": "#374151",
        "gray_800": "#1F2937",
        "gray_900": "#111827",
        "lime_300": "#B8FF66",
        "lime_400": "#A3FF12",
        "lime_500": "#8FE42A",
        "accent_green_overlay": "rgba(139, 233, 61, 0.35)",
        "accent_star": "#C6FF26"
      },
      "semantic": {
        "brand": {
          "primary": "#A3FF12",
          "primary_fg_on": "#0B0B0B",
          "primary_alt": "#8FE42A"
